@{
    ViewBag.Title = "Home Page";
}

@using Q_and_A_Forum.Models;
@model ICollection<Topic>

<div class="jumbotron">
    <h1>Q&amp;A Forum</h1>
    <p class="lead">This is forum is intended to answer all common and extraordinary questions and solve the misteries of the wind turbines.</p>
</div>

<div class="row">
    @if (Model.Count > 0)
    {
        <div class="col-md-4">
            <h2>@Model.ToList().ElementAt(0).Title</h2>
            <p>
                @Model.ToList().ElementAt(0).Description
            </p>
            <p><a class="btn btn-default" href="/Topic/Details/@Model.ToList().ElementAt(0).TopicID">Read more &raquo;</a></p>
        </div>
        <div class="col-md-4">
            <h2>@Model.ToList().ElementAt(1).Title</h2>
            <p>
                @Model.ToList().ElementAt(1).Description
            </p>
            <p><a class="btn btn-default" href="/Topic/Details/@Model.ToList().ElementAt(1).TopicID">Read more &raquo;</a></p>
        </div>
        <div class="col-md-4">
            <h2>@Model.ToList().ElementAt(2).Title</h2>
            <p>
                @Model.ToList().ElementAt(2).Description
            </p>
            <p><a class="btn btn-default" href="/Topic/Details/@Model.ToList().ElementAt(2).TopicID">Read more &raquo;</a></p>
        </div>
    }
    else
    {
        <p> "Data not available. Please try again later."</p>
    }
</div>